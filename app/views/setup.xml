<Alloy>
	<ScrollView id="Wrapper" name="Setup" backgroundColor="white" backgroundImage="/ArmyBW.gif" layout="vertical">
		<!--<View id="Wrapper" name="Setup" backgroundColor="white" backgroundImage="/ArmyBW.gif" layout="vertical">-->
			<Require type="widget" src="com.mcongrove.navigationBar" id="NavigationBar" image="data/logo.png" />
		
				<TextField id="txtUser" hintText="Soldier Name(User name)" color="White" opacity="0.3" borderStyle="INPUT_BORDERSTYLE_BEZEL" borderColor="black" width="300"  height="50" />
				<TextField id="txtFirst" hintText="First name" color="White" opacity="0.3" borderStyle="INPUT_BORDERSTYLE_BEZEL" borderColor="black" width="300"  height="50" />
				<TextField id="txtLast" hintText="Last name" color="White" opacity="0.3" borderStyle="INPUT_BORDERSTYLE_BEZEL" borderColor="black" width="300"  height="50" />
				<TextField id="txtPass" hintText="Password"  passwordMask="true" color="White" opacity="0.3" borderStyle="INPUT_BORDERSTYLE_BEZEL" borderColor="black"  width="300"  height="50" />
				<TextField id="txtGoal" hintText="Goal" color="White" opacity="0.3" borderStyle="INPUT_BORDERSTYLE_BEZEL" borderColor="black" width="300"  height="50" />
				<TextField id="txtCost" hintText="Cost" color="White" opacity="0.3" borderStyle="INPUT_BORDERSTYLE_BEZEL" borderColor="black" width="300"  height="50" />
				
				<View id="btnView" layout="horizontal" height="50dp" left="29dp">
					<TextField id="txtTime" hintText="Time" color="White" opacity="0.3" width="75"  height="50" />
					<Button id="btnYear" onClick="timeSelectionY">Year</Button>
					<Button id="btnMonth" onClick="timeSelectionM">Month</Button>
					<Button id="btnWeek" onClick="timeSelectionW">Week</Button>
				</View>
				
				<Button id="btnSubmit" borderStyle="INPUT_BORDERSTYLE_BEZEL">Create User</Button>
				
				<View layout="horizontal" height="50dp">
					<Label color="black" left="45dp">Setup new platoon?</Label>
					<Switch id="platoonSwitch" value="false" />
				</View>
				
				<TextField id="txtPlatoon" hintText="Platoon Name" color="#336699" width="300"  height="50" />
				<TextField id="txtDrillSerg" hintText="Want to set up Drill Sergeant?" color="#336699" width="300"  height="50" />
  				<Button id="btnPlatoonSubmit">Create Platoon</Button>
  				
  				
		<!--</View>-->
		</ScrollView>
</Alloy>
