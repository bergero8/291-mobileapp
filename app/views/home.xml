<Alloy>
	<View id="Wrapper" name="Text" layout="vertical">
		<Require type="widget" src="com.mcongrove.navigationBar" id="NavigationBar" image="data/logo.png" />

		<ScrollView id="container" layout="vertical">
			<Label id="heading" />
			<ImageView id="image" image="/Army.png" width="300dp" />
			<Label id="text" />
			<TextField id="txtUser" hintText="Enter user name" width="300dp"></TextField>
			<TextField id="txtPass" hintText="Enter password" passwordMask="true" width="300dp"></TextField>
			<Button id="btnLogin">Login</Button>
	</ScrollView>
	</View>
</Alloy>
